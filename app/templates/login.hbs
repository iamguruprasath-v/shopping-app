{{page-title "Login"}}

<div class="min-h-screen bg-gradient-to-br from-primary/10 via-secondary/5 to-accent/10 flex items-center justify-center p-4">
  <div class="card w-full max-w-md shadow-2xl bg-base-100 border border-base-300">

    <div class="card-body">
      {{!-- Header with Icon --}}
      <div class="text-center mb-6">
        <div class="avatar placeholder mb-4">
          <div class="bg-primary text-primary-content rounded-full w-16 h-16">
            <span class="text-2xl">üîê</span>
          </div>
        </div>
        <h1 class="text-3xl font-bold text-base-content">Welcome Back</h1>
        <p class="text-base-content/70 mt-2">Login to continue shopping</p>
      </div>

      {{!-- Login Feedback --}}
      <div class="text-sm text-center min-h-[1.5rem] mb-2">
        {{#if this.loginInfo}}
          <span class="{{if this.loginSuccess 'text-green-600' 'text-red-600'}}">
            {{this.loginInfo}}
          </span>
        {{/if}}
      </div>

      {{!-- Login Form --}}
      <form class="space-y-4" {{on "submit" this.login}}>
        <label class="form-control w-full">
          <div class="label"><span class="label-text font-medium">üìß Email</span></div>
          <input
            type="email"
            name="email"
            placeholder="you@example.com"
            class="input input-bordered w-full focus:input-primary"
            value={{this.email}}
            {{on "input" this.onChangeHandler}}
            required
          />
        </label>

        <label class="form-control w-full">
          <div class="label"><span class="label-text font-medium">üîí Password</span></div>
          <input
            type="password"
            name="password"
            placeholder="‚Ä¢‚Ä¢‚Ä¢‚Ä¢‚Ä¢‚Ä¢‚Ä¢‚Ä¢"
            class="input input-bordered w-full focus:input-primary"
            value={{this.password}}
            {{on "input" this.onChangeHandler}}
            required
          />
        </label>

        <button class="btn btn-primary w-full mt-2 gap-2" type="submit">
          <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
          </svg>
          Login
        </button>
      </form>

      {{!-- Register Link --}}
      <div class="divider">New here?</div>
      <div class="text-center">
        <LinkTo @route="register" class="btn btn-outline btn-ghost gap-2">
          <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M18 9v3m0 0v3m0-3h3m-3 0h-3m-2-5a4 4 0 11-8 0 4 4 0 018 0zM3 20a6 6 0 0112 0v1H3v-1z" />
          </svg>
          Create Account
        </LinkTo>
      </div>
    </div>
  </div>
</div>
