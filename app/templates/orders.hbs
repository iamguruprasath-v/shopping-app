{{page-title "Your Orders"}}

<h1 class="text-2xl font-bold text-center mb-4">Your Orders</h1>

{{#if this.cartService.orders.length}}
  <div class="space-y-4">
    {{#each this.cartService.orders as |order|}}
      <OrderCard @order={{order}} />
    {{/each}}
  </div>
{{else}}
  <div class="max-w-2xl mx-auto text-center mt-20 space-y-4">
    <NoAvailable @resourceType="Orders" />
  </div>
{{/if}}
