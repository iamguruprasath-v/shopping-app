{{page-title "Register"}}
<div class="min-h-screen flex items-center justify-center bg-base-200">
  <div class="card w-full max-w-md shadow-lg bg-base-100 p-6 space-y-4">
    <h1 class="text-2xl font-bold text-center">Register with YourMart</h1>

    <label class="form-control w-full">
      <div class="label"><span class="label-text">Name</span></div>
      <input type="text" placeholder="Your name" class="input input-bordered w-full" />
    </label>

    <label class="form-control w-full">
      <div class="label"><span class="label-text">Email</span></div>
      <input type="email" placeholder="you@example.com" class="input input-bordered w-full" />
    </label>

    <label class="form-control w-full">
      <div class="label"><span class="label-text">Password</span></div>
      <input type="password" placeholder="••••••••" class="input input-bordered w-full" />
    </label>

    <button class="btn btn-primary w-full mt-2" type="button">Register</button>

    <p class="text-sm text-center mt-2">
      Already have an account? 
      <LinkTo @route="login" class="text-primary underline ml-1">Login</LinkTo>
    </p>
  </div>
</div>
