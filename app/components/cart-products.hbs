{{#if (gt this.cartItems.length 0)}}
  <section class="max-w-6xl mx-auto w-[90%] mt-8 space-y-6">
    <div class="flex items-center justify-between border-b border-gray-300 pb-3">
      <h1 class="text-3xl font-bold text-gray-800">ðŸ›’ Your Cart</h1>
      <span class="text-sm text-gray-500">
        {{this.cartItems.length}} {{if (eq this.cartItems.length 1) "item" "items"}} in cart
      </span>
    </div>

    <ListCartProducts @clearCart={{this.clearCart}} @products={{this.cartItems}} />
  </section>
{{else}}
  <div class="max-w-2xl mx-auto text-center mt-20 space-y-4">
    <NoAvailable @resourceType="cart products" />
    <p class="text-lg text-gray-600">Your shopping cart is feeling a little empty... ðŸ§º</p>
    <LinkTo @route="index" class="btn btn-primary">Start Shopping</LinkTo>
  </div>
{{/if}}
