<div class="flex justify-center px-4 py-6">
  <div class="card bg-gradient-to-br from-white to-gray-50 shadow-lg hover:shadow-xl transition-all duration-300 p-6 rounded-xl border border-gray-100 w-full max-w-4xl">
    
    {{!-- Header --}}
    <div class="flex justify-between items-start mb-4">
      <div class="flex-1">
        <h2 class="font-bold text-2xl text-primary mb-2 flex items-center gap-2">
          <svg class="w-6 h-6 text-primary" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 11V7a4 4 0 00-8 0v4M5 9h14l1 12H4L5 9z" />
          </svg>
          Order #{{@order.id}}
        </h2>
        <p class="text-sm text-gray-500 flex items-center gap-1">
          <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"/>
          </svg>
          Ordered on: {{this.formattedDate}}
        </p>
      </div>

      <button class="btn btn-sm btn-primary shadow-md hover:shadow-lg transform hover:scale-105 transition-all duration-200 flex items-center gap-2" type="button" {{on "click" this.openModal}}>
        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z" />
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z" />
        </svg>
        View Details
      </button>
    </div>

    {{!-- Order Info --}}
    <div class="bg-white/70 backdrop-blur-sm rounded-lg p-4 space-y-3 border border-gray-100">
      
      {{!-- Products --}}
      <div class="flex items-start gap-2">
        <svg class="w-5 h-5 text-gray-600 mt-0.5 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M20 7l-8-4-8 4m16 0l-8 4m8-4v10l-8 4m0-10L4 7m8 4v10M4 7v10l8 4" />
        </svg>
        <div>
          <p class="font-medium text-gray-700 mb-1">Products:</p>
          <p class="text-sm text-gray-600">
            {{#if (and @order.products (is-array @order.products))}}
              {{#each @order.products as |item index|}}
                {{#if (lt index 3)}}
                  <span class="inline-block bg-blue-50 text-blue-700 px-2 py-1 rounded-full text-xs mr-1 mb-1">
                    {{item.product.title}}
                  </span>
                {{/if}}
              {{/each}}
              {{#if (gt @order.products.length 3)}}
                <span class="inline-block bg-gray-100 text-gray-600 px-2 py-1 rounded-full text-xs">
                  +{{sub @order.products.length 3}} more
                </span>
              {{/if}}
            {{else}}
              <em class="text-red-400 bg-red-50 px-2 py-1 rounded-full text-xs">No products</em>
            {{/if}}
          </p>
        </div>
      </div>

      {{!-- Total --}}
      <div class="flex items-center gap-2">
        <svg class="w-5 h-5 text-green-600 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1"/>
        </svg>
        <p class="font-semibold text-lg text-green-700">
          Total Paid: <span class="text-xl">${{@order.total}}</span>
        </p>
      </div>

      {{!-- Status --}}
      <div class="flex items-center gap-2">
        <svg class="w-5 h-5 {{if @order.isDelivered 'text-green-600' 'text-yellow-600'}} flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"/>
        </svg>
        <p class="font-medium text-gray-700">
          Status:
          <span class="{{if @order.isDelivered 'bg-green-100 text-green-800' 'bg-yellow-100 text-yellow-800'}} px-3 py-1 rounded-full text-sm font-medium ml-2">
            {{if @order.isDelivered "✓ Delivered" "⏳ Pending"}}
          </span>
        </p>
      </div>
    </div>
  </div>
</div>

{{!-- Modal --}}
{{#if this.isModalOpen}}
  <dialog open class="modal modal-open">
    <div class="modal-box w-11/12 max-w-4xl animate-scale-in rounded-xl">
      
      {{!-- Modal Header --}}
      <div class="bg-primary text-white px-6 py-4 rounded-t-xl">
        <div class="flex justify-between items-center">
          <div>
            <h3 class="text-xl font-bold">Order #{{@order.id}}</h3>
            <p class="text-sm text-blue-100 mt-1">Ordered on: {{this.formattedDate}}</p>
          </div>
          <span class="badge px-4 py-2 {{if @order.isDelivered 'badge-success' 'badge-warning'}}">
            {{if @order.isDelivered "✓ Delivered" "⏳ Pending"}}
          </span>
        </div>
      </div>

      {{!-- Modal Body --}}
      <div class="p-6 max-h-[60vh] overflow-y-auto bg-base-100 space-y-6">
        <table class="table table-zebra w-full text-sm">
          <thead>
            <tr>
              <th>Product</th>
              <th>Qty</th>
              <th>Unit Price</th>
              <th>Total</th>
            </tr>
          </thead>
          <tbody>
            {{#each @order.products as |item|}}
              <tr>
                <td>{{item.product.title}}</td>
                <td>{{item.quantity}}</td>
                <td>${{item.product.price}}</td>
                <td>${{mul item.product.price item.quantity}}</td>
              </tr>
            {{/each}}
          </tbody>
        </table>

        <div class="text-right font-bold text-lg mt-4">
          Total Paid: ${{@order.total}}
        </div>
      </div>

      {{!-- Modal Footer --}}
      <div class="modal-action px-6 py-4 bg-base-200 rounded-b-xl">
        <button class="btn" type="button" {{on "click" this.closeModal}}>Close</button>
      </div>
    </div>
  </dialog>
{{/if}}
