<header class="fixed left-0 right-0 z-50 flex justify-center pointer-events-none">
  <div class="navbar max-w-7xl w-[95%] mx-auto px-4 bg-base-100/80 backdrop-blur-md shadow-md rounded-xl pointer-events-auto transition duration-300">
    <div class="flex-1 items-center gap-4">
      <LinkTo @route="index" class="btn btn-ghost text-xl">
        <span class="primary font-bold text-primary">YourMart</span>
      </LinkTo>

      {{#if (this.isLoggedIn)}}
        <LocationModal />
      {{else}}
        <span class="text-sm text-gray-500">Login or Register to continue</span>
      {{/if}}
    </div>

    <div class="flex-none gap-2">
      {{!-- Favourites --}}
      <LinkTo @route="favs" class="btn btn-ghost btn-circle">
        <div class="indicator">
          <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none"
               viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                  d="M4.318 6.318a4.5 4.5 0 016.364 0L12 7.636l1.318-1.318a4.5 4.5 
                     0 116.364 6.364L12 21.364l-7.682-7.682a4.5 4.5 
                     0 010-6.364z" />
          </svg>
          {{#if (this.isLoggedIn)}}
            <span class="badge badge-sm indicator-item">{{this.favCount}}</span>
          {{/if}}
        </div>
      </LinkTo>

      {{!-- Orders --}}
      <LinkTo @route="orders" class="btn btn-ghost btn-circle">
        <div class="indicator">
          <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none"
               viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                  d="M5 8h14l1 12H4L5 8zM7 8V6a5 5 0 0110 0v2" />
          </svg>
          {{#if (this.isLoggedIn)}}
            <span class="badge badge-sm badge-primary indicator-item">2</span>
          {{/if}}
        </div>
      </LinkTo>

      {{!-- Cart --}}
      <div class="dropdown dropdown-end">
        <div tabindex="0" role="button" class="btn btn-ghost btn-circle">
          <div class="indicator">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none"
                 viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                    d="M3 3h2l.4 2M7 13h10l4-8H5.4M7 13L5.4 5M7 13l-2.293 
                       2.293c-.63.63-.184 1.707.707 1.707H17m0 0a2 2 0 
                       100 4 2 2 0 000-4zm-8 2a2 2 0 11-4 0 2 2 0 014 0z" />
            </svg>
            {{#if (this.isLoggedIn)}}
              <span class="badge badge-sm indicator-item">{{(this.getCartCount)}}</span>
            {{/if}}
          </div>
        </div>
        <div tabindex="0" class="card card-compact dropdown-content bg-base-100 z-10 mt-3 w-52 shadow-xl">
          <div class="card-body">
            <span class="text-lg font-bold">
              {{if (this.isLoggedIn) (concat (this.getCartCount) " items") "Login to Start"}}
            </span>
            <span class="text-info">
              {{if (this.isLoggedIn) (concat "Subtotal: $" (this.getSubTotal)) ""}}
            </span>
            <div class="card-actions">
              {{#if (this.isLoggedIn)}}
                <LinkTo @route="cart" class="w-full"><button class="btn btn-primary btn-block" type="button">View cart</button></LinkTo>
              {{else}}
                <LinkTo @route="login" class="w-full"><button class="btn btn-primary btn-block" type="button">Login</button></LinkTo>
                <LinkTo @route="register" class="w-full"><button class="btn btn-secondary btn-block" type="button">Register</button></LinkTo>
              {{/if}}
            </div>
          </div>
        </div>
      </div>

      {{!-- Avatar --}}
      <div class="dropdown dropdown-end">
        <div tabindex="0" role="button" class="btn btn-ghost btn-circle avatar">
          <div class="w-10 rounded-full">
            <img alt="User avatar"
                 src="https://img.daisyui.com/images/stock/photo-1534528741775-53994a69daeb.webp" />
          </div>
        </div>
        <ul tabindex="0" class="menu menu-sm dropdown-content bg-base-100 rounded-box z-10 mt-3 w-52 p-2 shadow">
          <li><a>Profile</a></li>
          <li><a>Settings</a></li>
          <li><a>Logout</a></li>
        </ul>
      </div>
    </div>
  </div>
</header>
